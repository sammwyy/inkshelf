NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/manga_platform?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
# For S3-compatible storage
# STORAGE_S3_BUCKET=
# STORAGE_S3_REGION=
# STORAGE_S3_ACCESS_KEY=
# STORAGE_S3_SECRET_KEY=
# STORAGE_S3_ENDPOINT=

# CORS
CORS_ORIGIN=http://localhost:5173

# App
MAX_REQUEST_SIZE=10mb
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# Feature Flags
FEATURE_COMMENTS_ENABLED=true
FEATURE_RATINGS_ENABLED=true
FEATURE_PUBLIC_LISTS_ENABLED=true