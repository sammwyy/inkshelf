{
  "name": "@inkshelf/backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:client": "cd webclient && bun run dev && cd ..",
    "build": "bun build src/index.ts --outdir dist --target node --external nock --external aws-sdk --external mock-aws-s3 && bun run build:client",
    "build:client": "cd webclient && bun run build && cd .. && bun scripts/copy-client.ts",
    "start": "bun dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "scripts:nukedatabase": "bun scripts/nuke-database.ts",
    "scripts:generateadmin": "bun scripts/generate-admin.ts",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^9.0.7",
    "argon2": "^0.31.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.12",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prisma": "^5.9.1",
    "supertest": "^7.2.2",
    "typescript": "^5.3.3"
  }
}